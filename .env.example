# Environment Configuration Template
# Copy this to .env and .env.prod for different environments

# Environment (development, staging, production, testing)
ENVIRONMENT=development

# Database Configuration
POSTGRES_DB=genai_chatbot
POSTGRES_USER=genai_user
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0

# Application Security
SECRET_KEY=your_super_secret_key_here_at_least_32_characters_long
JWT_SECRET=your_jwt_secret_key_here_also_at_least_32_characters
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Model API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_ai_api_key_here

# Application URLs and CORS
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend Environment Variables
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_APP_NAME=GenAI Chatbot
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Docker Registry (for production)
DOCKER_REGISTRY=thingxcloud
IMAGE_TAG=latest

# Production Domain Configuration
DOMAIN_NAME=your-domain.com
SSL_EMAIL=admin@your-domain.com

# Port Configuration
HTTP_PORT=80
HTTPS_PORT=443
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Database Configuration (Production)
# Use strong passwords and consider external managed databases
DB_HOST=postgres
DB_PORT=5432
DB_MAX_CONNECTIONS=20
DB_POOL_SIZE=10

# Redis Configuration (Production)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_MAX_CONNECTIONS=10
REDIS_DB=0

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
GRAFANA_PASSWORD=admin123
PROMETHEUS_RETENTION_DAYS=15

# File Upload Configuration
MAX_FILE_SIZE=20971520  # 20MB in bytes
ALLOWED_FILE_TYPES=pdf,txt,docx,md,csv
UPLOAD_PATH=./data/uploads

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds
API_RATE_LIMIT=10     # requests per second

# Email Configuration (if email features are enabled)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@your-domain.com

# OAuth Configuration (if social login is enabled)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600  # seconds
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900  # seconds (15 minutes)

# Feature Flags
ENABLE_SOCIAL_LOGIN=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_MFA=false
ENABLE_FILE_UPLOADS=true
ENABLE_VOICE_MESSAGES=false
ENABLE_THEMES=true
ENABLE_ANALYTICS=false

# Analytics and Tracking (if enabled)
GOOGLE_ANALYTICS_ID=
POSTHOG_KEY=
SENTRY_DSN=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
AWS_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2

# Development Tools
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_CORS=true
HOT_RELOAD=true

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./test.db
TEST_REDIS_URL=redis://localhost:6379/1
